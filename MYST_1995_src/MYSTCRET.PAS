 Procedure Delete_Name;
 var
    strptr : byte;
    hangul : boolean;
 begin
    strptr := 1;
    while length(name) >= strptr do begin
       if ord(name[strptr]) > 127 then begin
          hangul := TRUE;
          strptr := strptr + 2;
       end else begin
          hangul := FALSE;
          strptr := strptr + 1;
       end;
    end;
    if hangul then begin
       if length(name) > 1 then name[0] := chr(strptr-3)
    end
    else begin
       if length(name) > 0 then name[0] := chr(strptr-2);
    end;
    Output_Name;
 end;

